<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView1" android:layout_height="wrap_content" android:text="Tags" android:layout_width="wrap_content"></TextView>
    <EditText android:id="@+id/tags" android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textMultiLine"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="Text" android:layout_width="wrap_content"></TextView>
    <EditText android:id="@+id/text" android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textMultiLine"></EditText>
    <Button android:text="Add Note" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
